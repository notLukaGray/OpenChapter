# OpenChapter Environment Variables
# Copy this file to .env.local and fill in your values

# Required: Azure Speech Service (for audio generation)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# Optional: Google Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here

# Optional: IndexNow (for search engine indexing)
INDEXNOW_KEY=your_indexnow_key_here
INDEXNOW_KEY_LOCATION=https://yourdomain.com/your_indexnow_key.txt
INDEXNOW_ADMIN_SECRET=your_admin_secret_here

# Optional: Custom domain
NEXT_PUBLIC_DOMAIN=https://yourdomain.com

# Development settings
NODE_ENV=development
